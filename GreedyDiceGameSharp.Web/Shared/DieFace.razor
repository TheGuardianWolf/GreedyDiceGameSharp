            <g transform="translate(0 -922.52)" stroke="currentColor" fill="currentColor" stroke-linecap="square">
                <rect x="10" y="932.52" width="180" height="180" rx="24" ry="24" fill="#fff" stroke-width="9.6" fill-opacity="0" />
                <circle cx="100" cy="1022.5" r="20" />
            </g>
        </svg>
    </ConditionalGroup>
    <ConditionalGroup When="@(Number == 2)">
        <svg version="1.1" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" xmlns:cc="http://creativecommons.org/ns#" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
