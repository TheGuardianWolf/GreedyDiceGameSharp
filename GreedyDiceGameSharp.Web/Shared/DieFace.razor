@code {
    [Parameter]
    public int Number { get; set; }
    [Parameter]
    public bool Selected { get; set; }
    [Parameter]
    public bool Locked { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; } = new EventCallback<MouseEventArgs>();
}